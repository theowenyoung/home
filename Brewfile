# Homebrew 软件包管理器配置文件
# 使用 brew bundle install 命令安装所有软件

# ===== Homebrew Taps (第三方软件源) =====
tap "homebrew/bundle"              # Brewfile 支持
tap "homebrew/cask-fonts"          # 字体软件包
tap "homebrew/cask-versions"       # 软件的不同版本
tap "homebrew/services"            # 系统服务管理
tap "melonamin/formulae"           # 第三方软件源
tap "psviderski/tap"               # 第三方软件源
tap "telepresenceio/telepresence"  # Kubernetes 开发工具源

# ===== 命令行工具 (brew) =====
brew "autoconf"                    # 自动配置工具
brew "automake"                    # 自动化构建工具
brew "bash"                        # Bash shell
brew "curl"                        # 命令行 HTTP 客户端
brew "mas"                         # Mac App Store 命令行工具
brew "mise"                        # 运行时版本管理器
brew "git"
brew "fzf"
brew "awscli"
brew "jq"
brew "wget"
brew "tmux"
brew "neovim"
brew "ripgrep"
brew "coreutils"
brew "gnupg"
brew "age"
brew "nmap"

# ===== 应用程序 (cask) =====

cask "firefox"                     # Mozilla Firefox 浏览器
